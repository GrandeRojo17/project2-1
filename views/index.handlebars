<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Choose the group you would like to join!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="group-text">Example Text</label>
            <input type="text" id="group-text" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          
        <h3>Groups:</h3>
        <ul id="group-list" class="list-group">
          {{#each groups}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="group/{{this.id}}">{{this.groupName}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
