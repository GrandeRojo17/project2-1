{{!-- SINGLE Group Page --}}
{{!-- After user clicks link to enter group this is the group page --}}
<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          {{!-- Button to User send back to Groups --}}
          <a href="/">← Back To Groups</a>
          {{!-- variable to connect to a db = AuthorsName,GroupTitle,UserContent,GroupDate,MemberCount, groupPost --}}
          {{!-- Group page will display the  AuthorsName = Authors name, Amount of content inside = total number of posts in group
          groupDate= Date the group was created. memberCount = Total number of members, GroupPost = post inside this group --}}

          <h5 class="card-title">{{group.name}}</h5>
          {{!-- <p>Author of group is owner
            <strong>Owner</strong>: {{this.owner}}</p>
          <p> --}}
          <p>{{!-- Members Count --}}
            <strong>Members</strong>: {{members.length}}</p>
          <p>
            {{!-- Description of the group --}}
            <strong>Description:</strong> {{group.description}}</p>

          {{!-- Lists of post in group either a single line format or with individual squares similar to pintrest(each individual content gets it's own square (padding to take up space.) --}}
          {{!--Either a straight list starting from top to bottom or 2 colums across and multiple rows down --}}
          <h3>Create your own Post:</h3>
          {{!-- <p>{{group.id}} hello</p> --}}
          {{!-- Form for group create --}}
          <form id="create-button-group" class="clearfix mb-4"  method="POST">
              
              <div class="form-group">

              
              <input type="number" id="postGroupID" class="form-control" placeholder="Group ID" value={{{group.id}}} readonly >
              {{!-- value={{group.id}} readonly --}}

              <label for="postTitle">Post Title</label>
              <input type="text" id="postTitle" class="form-control" placeholder="Post Title">

              <label for="postAuthor">Post Author:</label>
              <input type="text" id="authorName" class="form-control" placeholder="Author Name">

              <label for="postTopic">Post Topic:</label>
              <input type="text" id="postTopic" class="form-control" placeholder="Post Topic">

              <input type="number" id="postId" class="form-control" placeholder="Post ID" >
              {{!-- value={{ groupUser.UserId}} readonly --}}

              <label for="postContent">Post Content:</label>
              <input type="text" id="postContent" class="form-control" placeholder="Post Content">
              
              <button type="submit" id="createPost-button" style="background-color: green;">Create</button>
            </div>
          </form>

          {{#each posts}}
          <li data-id="{{this.id}}" class="list-post-item">
            {{!-- <a href="posts/{{this.id}}">{{this.postTitle}}</a> --}}
            <p>{{this.postTitle}}</p>
            <p>{{this.authorName}}</p>
            <p>{{this.postTopic}}</p>
            <p>{{this.postContent}}</p>
            <p>{{this.content}}</p>
          </li>

          {{/each}}
          {{!-- This is an example post --}}

          {{!-- This will be the div with the posts inside. Mobile responsive and side by side--}}

          {{!-- Button to User send back to Groups --}}
          {{!-- <a href="/">← Back To Home</a> --}}
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>